extends account

block content
  .page-header
    .logo-brand
      h1 Logo

  .page-connect
    a.btn.btn-block.btn-social.btn-google(href='/auth/google')
      i.fa.fa-google
      | Sign in with Google
    a.btn.btn-block.btn-social.btn-facebook(href='/auth/facebook')
      i.fa.fa-facebook
      | Sign in with Facebook
    .page-buttons.btn-block.flex.flex-row
      a.btn.btn-transparent(href='#{url("login")}') Sign in
      a.btn.btn-transparent(href='#{url("signup")}') Register

    .container.page-terms
      p By signing up you agree to the Terms of Service and Privacy Policy
